<%-include('../cabecalho.ejs')%>
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Editar Cliente: <%= Cliente.nome %></h3>
        </div>
        <div class="card-body">
            <form method="post">
                <!-- Nome -->
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input 
                        type="text" 
                        name="nome" 
                        id="nome" 
                        class="form-control" 
                        value="<%= Cliente.nome %>" 
                        required
                    >
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        class="form-control" 
                        value="<%= Cliente.email %>" 
                        required
                    >
                </div>

                <!-- CPF -->
                <div class="mb-3">
                    <label for="cpf" class="form-label">CPF</label>
                    <input 
                        type="text" 
                        name="cpf" 
                        id="cpf" 
                        class="form-control" 
                        value="<%= Cliente.cpf %>" 
                        required
                    >
                </div>

                <!-- BotÃ£o de envio -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Atualizar Cliente</button>
                </div>
            </form>
        </div>
    </div>
</div>

    <%-include('../rodape.ejs')%>