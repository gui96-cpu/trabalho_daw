<%-include('../cabecalho.ejs')%>
<section class="col-12 col-md-10">
  <div class="card my-4 shadow" style="border-radius: 8px; border: none;">
      <div class="card-header" style="background-color: #00c853; color: #ffffff; font-size: 1.25rem; font-weight: bold;">
          Adicionar Cliente
      </div>
      <div class="card-body" style="background-color: #f7f7f7; padding: 30px;">
          <form method="post">
              <div class="mb-3">
                  <label for="nome" class="form-label" style="font-weight: bold; color: #333333;">Nome</label>
                  <input type="text" name="nome" required id="nome" class="form-control" placeholder="Digite o nome completo" style="border-radius: 5px; border: 1px solid #ccc;">
              </div>
              
              <div class="mb-3">
                  <label for="email" class="form-label" style="font-weight: bold; color: #333333;">Email</label>
                  <input type="email" name="email" required id="email" class="form-control" placeholder="Digite o email" style="border-radius: 5px; border: 1px solid #ccc;">
              </div>
              
              <div class="mb-3">
                  <label for="cpf" class="form-label" style="font-weight: bold; color: #333333;">CPF</label>
                  <input type="text" name="cpf" required id="cpf" class="form-control" placeholder="Digite o CPF" style="border-radius: 5px; border: 1px solid #ccc;">
              </div>
              
              <div class="d-grid">
                  <input type="submit" value="Adicionar" class="btn" style="background-color: #00c853; color: #ffffff; font-weight: bold; border-radius: 5px;">
              </div>
          </form>
      </div>
  </div>
</section>

