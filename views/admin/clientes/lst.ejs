<%-include('../cabecalho.ejs')%>
<section class="col-12 col-md-10">
  <div class="card my-4 shadow-lg" style="border-radius: 12px; border: none;">
      <div class="card-header text-white" style="background-color: #00c853; font-size: 1.5rem; font-weight: bold; border-top-left-radius: 12px; border-top-right-radius: 12px;">
          Lista de Clientes
      </div>
      <div class="card-body" style="background-color: #f9f9f9; padding: 30px; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;">
          <table class="table table-striped table-bordered" style="border-radius: 8px; overflow: hidden;">
              <thead class="thead-dark" style="background-color: #2d2d2d;">
                  <tr>
                      <th scope="col" class="text-white">ID</th>
                      <th scope="col" class="text-white">Nome</th>
                      <th scope="col" class="text-white">Email</th>
                      <th scope="col" class="text-white">CPF</th>
                      <th scope="col" class="text-white">Editar</th>
                  </tr>
              </thead>
              <tbody>
                  <% Clientes.forEach(function(cliente){ %>
                      <tr style="background-color: #ffffff;">
                          <th scope="row" style="font-weight: bold; color: #333333;">
                              <%= cliente._id %>
                          </th>
                          <td style="color: #333333;">
                              <%= cliente.nome %>
                          </td>
                          <td style="color: #333333;">
                              <%= cliente.email %>
                          </td>
                          <td style="color: #333333;">
                              <%= cliente.cpf %>
                          </td>
                          <td>
                            <a href="/admin/clientes/edt/<%=cliente._id %>" 
                               class="btn btn-info btn-sm" 
                               style="border-radius: 8px; background-color: #00c853; color: white; font-weight: bold; padding: 6px 12px;">
                                Editar
                            </a>
                        </td>
                      </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>
  </div>
</section>

  <%-include('../rodape.ejs')%>