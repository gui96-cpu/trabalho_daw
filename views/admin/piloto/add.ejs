  .form-control:focus {
      border-color: #28a745;
      box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
  }

  .form-label {
      font-weight: bold;
      color: #333333;
  }

  .btn-success {
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s ease;
  }

  .btn-success:hover {
      background-color: #218838;
  }

  .card {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card-header {
      background-color: #28a745;
      font-size: 1.5rem;
      font-weight: bold;
  }
</style>

