<section class="col-12 col-md-10">
  <div class="card my-4 shadow-lg" style="border-radius: 12px; border: none;">
      <div class="card-header text-white" style="background-color: #28a745; font-size: 1.5rem; font-weight: bold; border-top-left-radius: 12px; border-top-right-radius: 12px;">
          Adicionar Piloto
      </div>
      <div class="card-body" style="background-color: #f9f9f9; padding: 30px; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;">
          <form method="post">
              <div class="mb-3">
                  <label for="nome" class="form-label">Nome</label>
                  <input type="text" name="nome" required id="nome" class="form-control" placeholder="Digite o nome do piloto" style="border-radius: 8px;">
              </div>
              <div class="mb-3">
                  <label for="cpf" class="form-label">CPF</label>
                  <input type="text" maxlength="11" name="cpf" required id="cpf" class="form-control" placeholder="Digite o CPF" style="border-radius: 8px;">
              </div>
              <div class="mb-3">
                  <label for="certificado" class="form-label">Certificado</label>
                  <input type="text" name="certificado" required id="certificado" class="form-control" placeholder="Digite o nÃºmero do certificado" style="border-radius: 8px;">
              </div>
              <div class="mb-3">
                  <input type="submit" value="Adicionar" class="form-control btn btn-success" style="border-radius: 8px; font-weight: bold;">
              </div>
          </form>
      </div>
  </div>
</section>

<!-- Estilos adicionais -->
