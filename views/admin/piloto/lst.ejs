<%-include('../cabecalho.ejs')%>
<section class="col-12 col-md-10">
  <div class="card my-4 shadow-lg" style="border-radius: 12px; border: none;">
      <div class="card-header text-white" style="background-color: #28a745; font-size: 1.5rem; font-weight: bold; border-top-left-radius: 12px; border-top-right-radius: 12px;">
          Listar Pilotos
      </div>
      <div class="card-body" style="background-color: #f9f9f9; padding: 30px; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;">
      
          

          <!-- Tabela de Pilotos -->
          <table class="table table-striped table-bordered" style="border-radius: 8px; overflow: hidden;">
              <thead class="thead-dark" style="background-color: #343a40;">
                  <tr>
                      <th scope="col" class="text-white">ID</th>
                      <th scope="col" class="text-white">Nome</th>
                      <th scope="col" class="text-white">CPF</th>
                      <th scope="col" class="text-white">Certificado</th>
                      <th scope="col" class="text-white">Editar</th>
                      <th scope="col" class="text-white">Deletar</th>
                  </tr>
              </thead>
              <tbody>
                <% Piloto.forEach(function(piloto) { %>
                    <tr>
                        <td style="color: #333333;"><%= piloto._id %></td>
                        <td style="color: #333333;"><%= piloto.nome %></td>
                        <td style="color: #333333;"><%= piloto.cpf %></td>
                        <td style="color: #333333;"><%= piloto.certificado %></td>
                        <td>
                            <a href="/admin/piloto/edt/<%= piloto._id %>" class="btn btn-info btn-sm" style="border-radius: 8px;">Editar</a>
                        </td>
                        <td>
                            <a href="/admin/piloto/del/<%= piloto._id %>" class="btn btn-danger btn-sm" style="border-radius: 8px;">Deletar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            
          </table>
      </div>
  </div>
</section>

<!-- Estilos adicionais -->
<style>
  .form-control {
      background-color: #ffffff;
      border: 1px solid #ccc;
      font-size: 14px;
  }

  .form-control:focus {
      border-color: #28a745;
      box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
  }

  .btn-success, .btn-info, .btn-danger {
      font-size: 14px;
      font-weight: bold;
      padding: 6px 12px;
      transition: background-color 0.3s ease;
  }

  .btn-success:hover {
      background-color: #218838;
  }

  .btn-info:hover {
      background-color: #17a2b8;
  }

  .btn-danger:hover {
      background-color: #dc3545;
  }

  .card-header {
      background-color: #28a745;
      font-size: 1.5rem;
      font-weight: bold;
  }

  .table {
      margin-top: 20px;
  }

  .thead-dark {
      background-color: #343a40;
  }

  .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f9f9f9;
  }

  .table-bordered {
      border: 1px solid #ccc;
  }
</style>

