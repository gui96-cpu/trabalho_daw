<%-include('../cabecalho.ejs')%>
    <section class="col-12 col-md-10">
        <div class="card my-4 shadow-lg" style="border-radius: 12px; border: none;">
            <div class="card-header text-white"
                style="background-color: #007bff; font-size: 1.5rem; font-weight: bold; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                Categoria Produtos
            </div>
            <div class="card-body"
                style="background-color: #f8f9fa; padding: 30px; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;">
                <!-- Formulário de Adição de Produto -->
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="nome" class="form-label" style="font-weight: bold;">Nome</label>
                        <input type="text" name="nome" required id="nome" class="form-control"
                            style="border-radius: 8px; font-size: 14px; padding: 10px;">
                    </div>
                    <div class="mb-4">
                        <label for="valor" class="form-label" style="font-weight: bold;">Valor</label>
                        <input type="number" name="valor" required id="valor" class="form-control"
                            style="border-radius: 8px; font-size: 14px; padding: 10px;">
                    </div>
                    <div class="mb-4">
                        <label for="foto" class="form-label" style="font-weight: bold;">Foto</label>
                        <input type="file" accept="image/png, image/jpeg" multiple name="foto" required id="foto"
                            class="form-control" style="border-radius: 8px; font-size: 14px; padding: 10px;">
                    </div>
                    <div class="mb-4">
                        <input type="submit" value="Adicionar" class="btn btn-primary form-control"
                            style="border-radius: 8px; font-weight: bold; padding: 10px; font-size: 16px; cursor: pointer;">
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Estilos adicionais -->
    <style>
        .form-control {
            background-color: #ffffff;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .card-header {
            background-color: #007bff;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-body {
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }
    </style>

    <%-include('../rodape.ejs')%>